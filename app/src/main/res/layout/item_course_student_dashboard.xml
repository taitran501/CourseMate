<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_course_student_dashboard"
    android:padding="8dp">

    <TextView
        android:id="@+id/course_name_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên khóa học"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/course_description_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả khóa học"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/course_date_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày: 01/01/2023 - 31/12/2023"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/course_time_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian: 08:00 - 10:00"
        android:textSize="14sp" />
</LinearLayout>
