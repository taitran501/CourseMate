<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Include Toolbar -->
    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Course Title -->
        <TextView
            android:id="@+id/courseNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khóa học"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Course Description -->
        <TextView
            android:id="@+id/courseDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả khóa học"
            android:textSize="22sp"
            android:layout_marginBottom="12dp" />

        <!-- Teacher Name -->
        <TextView
            android:id="@+id/teacherNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giáo viên: Unknown"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Course Price -->
        <TextView
            android:id="@+id/coursePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền: 500.000 VNĐ"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Course Slot -->
        <TextView
            android:id="@+id/courseSlotTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng slot: 120"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</LinearLayout>
