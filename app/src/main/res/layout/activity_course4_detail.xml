<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Include Toolbar -->
    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Course Title -->
        <TextView
            android:id="@+id/courseNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_4"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Course Description -->
        <TextView
            android:id="@+id/courseDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_detail"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- Course ID -->
        <TextView
            android:id="@+id/courseIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_course4"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Teacher Name and ID -->
        <TextView
            android:id="@+id/teacherNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teachername4"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/teacherIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_teacher4"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Class Hours -->
        <TextView
            android:id="@+id/classHoursTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/classhours1"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Class Time -->
        <TextView
            android:id="@+id/classTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/classtime1"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Class Days -->
        <TextView
            android:id="@+id/classDaysTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/classday1"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Course Price -->
        <TextView
            android:id="@+id/coursePriceLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/coursePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.000.000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Course Slot -->
        <TextView
            android:id="@+id/courseSlotLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng slot:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/courseSlotTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</LinearLayout>
