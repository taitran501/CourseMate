<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemTeacherAssignment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#ffffff"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTeacherAssignmentIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_assignments"
            android:contentDescription="Assignment Icon"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tvTeacherAssignmentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiêu đề Bài tập"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingStart="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTeacherAssignmentDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả Bài tập"
        android:textSize="14sp"
        android:textColor="#777777"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/tvTeacherAssignmentDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deadline: 01/01/2024"
        android:textSize="14sp"
        android:textColor="#777777"
        android:paddingTop="2dp"/>
</LinearLayout>
