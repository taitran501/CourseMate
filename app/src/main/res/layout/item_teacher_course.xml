<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemTeacherCourse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#ffffff"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/ivTeacherCourseIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_course_icon_2"
        android:contentDescription="Course Icon"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTeacherCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Khóa học"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvTeacherCourseStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textSize="14sp"
            android:textColor="#777777"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvTeacherCourseDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu - Ngày kết thúc"
            android:textSize="14sp"
            android:textColor="#777777"
            android:paddingTop="2dp" />


    </LinearLayout>

</LinearLayout>
