<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f0f0f0">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào, Giáo viên!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:textColor="#333333"/>
    <!-- Layout cho các lựa chọn -->
    <LinearLayout
        android:id="@+id/layoutCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_course_icon"
            android:contentDescription="Courses Icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khóa học"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:textColor="#333333"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_schedule"
            android:contentDescription="Schedule Icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch dạy"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:textColor="#333333"/>
    </LinearLayout>

