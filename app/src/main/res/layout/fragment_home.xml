<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề thông báo -->
        <TextView
            android:id="@+id/tv_notifications_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo mới"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView cho thông báo -->
        <RecyclerView
            android:id="@+id/recyclerViewNotifications"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp" />

        <!-- Tiêu đề khóa học nổi bật -->
        <TextView
            android:id="@+id/tv_featured_courses_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khóa học nổi bật"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView cho khóa học nổi bật -->
        <RecyclerView
            android:id="@+id/recyclerViewCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</ScrollView>
